{
  "background": {
    "scripts": [
      "template.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon-128.png",
    "default_title": "Bookmarklet manager"
  },
  "options_page": "bookmarkletapp/dist/index.html",
  "name": "Bookmarklet manager",
  "description": "Helps you to keep your bookmarklets and makes it easy to edit them",
  "homepage_url": "http://github.com/vimark1/bookmarklet_manage",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "bookmarks"
  ],
  "version": "0.1",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
