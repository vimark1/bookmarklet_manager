{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon-128.png",
    "default_title": "Bookmarklet manager"
  },
  "options_page": "dist/index.html",
  "name": "Bookmarklet manager",
  "description": "Helps you to keep your bookmarklets and makes it easy to edit them",
  "homepage_url": "http://github.com/arkvim/bookmarklet_manage",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "bookmarks"
  ],
  "version": "1.2.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
